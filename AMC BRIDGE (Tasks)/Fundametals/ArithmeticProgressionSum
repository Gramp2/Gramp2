import java.util.Scanner;

public class ArithmeticProgressionSum {
    public static void main(String[] args) {
        int a, d, n;
        Scanner scanner = new Scanner(System.in);
        a = scanner.nextInt();
        d = scanner.nextInt();
        n = scanner.nextInt();
        System.out.print(Sum(a,d,n));
    }
    static int Sum(int a, int d, int n){
        int sum = 0;
        for (int i = 0; i < n; i++){
            sum = sum + a;
            a = a + d;
        }
        return sum;
    }
}
